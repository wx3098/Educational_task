<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @task, local: true) do |form| %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :detail %>
  <%= form.hidden_field :termination_date %>
  <%= form.hidden_field :status %>
  <%= form.hidden_field :priority %>


  <p>名前:<%= @task.name %></p>
  <p>詳細:<%= @task.detail %></p>
  <p>日付:<%= @task.termination_date %></p>
  <p>ステータス:<%= @task.status %></p>
  <p>優先順:<%= @task.priority %></p>
  <%= form.submit  "登録する" %>

  <%= form.submit '戻る', name: 'back' %>
<% end %>


