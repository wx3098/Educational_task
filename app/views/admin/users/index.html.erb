<h1>一覧画面（管理者用）</h1>

<table>
  <tr>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>タスク登録数</th>
    <th>管理者権限</th>
   </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.tasks.count %></td>
    <td><% if user.admin?  %>
    <p>管理者</p>
    <% else  %>
    <p>一般ユーザー</p>
    <% end %></td>
    <td><%= link_to '詳細を確認する', admin_user_path(user.id) %></td>
    <td><%= link_to "ユーザーを編集する", edit_admin_user_path(user.id) %></td>
    <td><%= link_to "ユーザーを削除する", admin_user_path(user.id), method: :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'ユーザー追加', new_admin_user_path %>